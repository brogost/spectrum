<Window x:Class="spectrum.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:spectrum="clr-namespace:spectrum"
        Title="MainWindow" Height="700" Width="725">
    <Grid Background="LightGreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="500"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0"  Height="22" Name="menu1" Width="200" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="{x:Null}">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" Click="FileOpen_Click"/>
            </MenuItem>
        </Menu>
        <spectrum:MyCanvas Grid.Row="1" Height="500" HorizontalAlignment="Stretch" x:Name="canvas1"/>
        <Grid Grid.Row="2" Height="100">
            <Slider Height="23" HorizontalAlignment="Stretch" Margin="0,539,0,0" Name="slider1" VerticalAlignment="Top" ValueChanged="slider1_ValueChanged" Maximum="100" />
            <CheckBox Name="cbxOne" IsChecked="False">Check Box One</CheckBox>
            <CheckBox Name="cbxTwo" IsChecked="True">Check Box Two</CheckBox>
        </Grid>
    </Grid>
</Window>
